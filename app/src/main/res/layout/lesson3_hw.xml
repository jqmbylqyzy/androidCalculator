<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/user"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/adamAty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user"
        android:layout_weight="1"
        android:text="Dina"
        android:textColor="#FF0909"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adamAty"
        android:layout_toRightOf="@id/user"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/upai" />

        <TextView
            android:id="@+id/scorePoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/adamAty"
            android:layout_toRightOf="@id/score"
            android:text="20 points"
            android:textColor="#FF0909"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/userKitap"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/score"
            android:layout_toRightOf="@id/user"
            app:srcCompat="@drawable/ic_baseline_bookmarks_24" />

        <TextView
            android:id="@+id/pages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scorePoints"
            android:layout_toRightOf="@id/userKitap"
            android:text="10 pages"
            android:textColor="#FF0909"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/newStudent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/user"
        android:layout_marginLeft="-50dp"
        android:layout_marginTop="-51dp"
        android:layout_toRightOf="@id/user"
        app:srcCompat="@drawable/usertype" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout"
        android:layout_marginLeft="-18dp"
        android:layout_toRightOf="@id/newStudent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/KitapSany"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/adamAty"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-8dp"
            android:layout_toRightOf="@id/scorePoints"
            app:srcCompat="@drawable/ic_baseline_menu_book_24" />

        <TextView
            android:id="@+id/bookNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/adamAty"
            android:layout_toRightOf="@id/KitapSany"
            android:text="18 books"
            android:textColor="#FF0909"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/phone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/KitapSany"
            android:layout_toRightOf="@id/pages"
            app:srcCompat="@drawable/seti" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookNum"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/phone"
            android:text="today"
            android:textColor="#FF0909"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/button10"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#FF0909"
        android:text="+"
        app:cornerRadius="100dp" />
</RelativeLayout>