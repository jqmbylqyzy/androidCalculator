<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_san"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="70sp"
        android:gravity="right"
        android:text="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/but_AC"
            style="@style/button_func"
            android:text="AC" />

        <Button
            android:id="@+id/but_PlusMinus"
            style="@style/button_func"
            android:text="+/-" />

        <Button
            style="@style/button_func"
            android:text="%" />

        <Button
            style="@style/button_func"
            android:text="/" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
        android:id="@+id/btn7"
        style="@style/button_style"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            style="@style/button_style"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            style="@style/button_style"
            android:text="9" />

        <Button
            style="@style/button_func"
            android:text="X" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
            style="@style/button_style"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            style="@style/button_style"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            style="@style/button_style"
            android:text="6" />

        <Button
            style="@style/button_func"
            android:text="-" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            style="@style/button_style"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            style="@style/button_style"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            style="@style/button_style"
            android:text="3" />

        <Button
            style="@style/button_func"
            android:text="+" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn0"
            style="@style/button_style"
            android:text="0" />


        <Button
            style="@style/button_style"
            android:text="." />

        <Button
            style="@style/button_func"
            android:text="=" />
    </LinearLayout>
</LinearLayout>